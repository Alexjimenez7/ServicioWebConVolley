<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/VistaDesingLogin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:id="@+id/imageView1" android:layout_gravity="center_horizontal"
            android:src="@drawable/user_foto"/>
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageViewusuario" android:src="@drawable/user"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUser"
            android:textColor="#000000"
            android:layout_gravity="left|center_vertical"
            android:hint="Ingrese Usuario"  />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_gravity="left|center_vertical">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/imageViewpassword"
            android:src="@drawable/lock" android:layout_marginLeft="10dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/txtPassword" android:layout_gravity="left|center_vertical"
            android:hint="Ingrese Password" android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="25sp"
            android:textAllCaps="false"
            android:text="Entrar"
            android:onClick="login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="25sp"
            android:textAllCaps="false"
            android:text="Registrar Usuario"
            android:onClick="registrar_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="25sp"
            android:textAllCaps="false"
            android:text="Salir"
            android:onClick="salir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>